<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Judul Aplikasi -->

    <!-- Role User -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Selamat Datang"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#444444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEKRE DIVISI"
        android:textSize="14sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="@id/tvWelcome"
        android:layout_marginTop="4dp" />

    <!-- Deskripsi Aplikasi -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aplikasi Pendataan Persuratan dan Proposal Organisasi Mahasiswa"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvRole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Persuratan -->
    <Button
        android:id="@+id/btnPersuratan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Persuratan"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Proposal -->
    <Button
        android:id="@+id/btnProposal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Proposal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnPersuratan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
