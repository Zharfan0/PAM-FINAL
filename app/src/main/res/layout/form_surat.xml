<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ================= JUDUL HALAMAN ================= -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Pengajuan Surat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- ================= JUDUL SURAT ================= -->
        <EditText
            android:id="@+id/etJudulSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Surat"
            android:inputType="textCapSentences" />

        <!-- ================= JENIS SURAT ================= -->
        <EditText
            android:id="@+id/etJenisSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jenis Surat (Contoh: Permohonan, Pemberitahuan)"
            android:layout_marginTop="12dp" />

        <!-- ================= DIVISI PENGIRIM ================= -->
        <EditText
            android:id="@+id/etDivisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Divisi Pengirim"
            android:layout_marginTop="12dp" />

        <!-- ================= TUJUAN SURAT ================= -->
        <EditText
            android:id="@+id/etTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tujuan Surat"
            android:layout_marginTop="12dp" />

        <!-- ================= NOMOR SURAT ================= -->
        <EditText
            android:id="@+id/etNomorSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor Surat (Opsional)"
            android:layout_marginTop="12dp" />

        <!-- ================= ISI SURAT ================= -->
        <EditText
            android:id="@+id/etIsiSurat"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Isi / Deskripsi Surat"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginTop="12dp" />

        <!-- ================= TOMBOL AKSI ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ajukan Surat" />

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Batal"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
