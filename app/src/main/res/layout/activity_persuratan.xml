<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Kategori -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnSuratMasuk"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Surat Masuk"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSuratKeluar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Surat Keluar"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Tombol Buat Surat -->
    <Button
        android:id="@+id/btnBuatSurat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buat Surat"
        android:layout_marginTop="16dp"/>

    <!-- Header Tabel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <TextView android:text="Nama" android:layout_weight="1"
            android:layout_width="0dp" android:layout_height="wrap_content"/>

        <TextView android:text="Divisi" android:layout_weight="1"
            android:layout_width="0dp" android:layout_height="wrap_content"/>

        <TextView android:text="No Surat" android:layout_weight="1"
            android:layout_width="0dp" android:layout_height="wrap_content"/>

        <TextView android:text="Status" android:layout_weight="1"
            android:layout_width="0dp" android:layout_height="wrap_content"/>

        <TextView android:text="Action" android:layout_weight="1"
            android:layout_width="0dp" android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Placeholder Data -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Data surat akan tampil di sini)"
        android:gravity="center"
        android:padding="16dp"/>
</LinearLayout>
